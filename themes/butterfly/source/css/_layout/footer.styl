#footer-wrap
  position: absolute
  padding: 1.2rem 1rem 1.4rem
  color: var(--light-grey)
  text-align: center
  left: 0
  right: 0
  top: 0
  bottom: 0

  a
    color: var(--light-grey)

    &:hover
      text-decoration: underline

  .footer-separator
    margin: 0 .2rem

  .icp-icon
    padding: 0 4px
    vertical-align: text-bottom
    max-height: 1.4em
    width auto